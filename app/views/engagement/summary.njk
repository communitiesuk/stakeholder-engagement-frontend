{% extends "common/templates/layout.njk" %}

{% block pageTitle %}
    {{serviceName}} - Record contact with a stakeholder
{% endblock %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: '/'
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            
            <h1 class="govuk-heading-l">
                <span class="govuk-caption-l">Record contact with a stakeholder</span>
                Next steps
            </h1>
            <form action="#" method="post" class="form">
            {% call govukFieldset({
                }) %}               

                {{ govukTextarea({
                    name: "stakeholder-actions",
                    id: "stakeholder-actions",
                    value: data['stakeholder-actions'],
                    rows: "10",
                    label: {
                        text: "What actions will you take on this stakeholder's information?"
                    },
                    hint: {
                        text: "We're asking to understand - we won't take action, forward actions to others or follow up"
                    }
                }) }}

                {{ govukRadios({
                        classes: "govuk-radios--inline",
                        idPrefix: "stakeholder-escalated",
                        name: "stakeholder-escalated",
                        value: data['stakeholder-escalated'],
                        fieldset: {
                            legend: {
                                text: "Have you escalated anything as a result of this contact?",
                                isPageHeading: true,
                                classes: "govuk-fieldset__legend--m"
                            }
                        },
                        items: [
                            {
                                value: "yes",
                                text: "Yes"
                            },
                            {
                                value: "no",
                                text: "No"
                            }
                        ]
                    }) }}


                 {{ govukRadios({
                    classes: "govuk-radios",
                    idPrefix: "stakeholder-next-contact",
                    name: "stakeholder-next-contact",
                    value: data['stakeholder-next-contact'],
                    fieldset: {
                        legend: {
                        text: "When is your next planned contact with the stakeholder?",
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend--m"
                        }
                    },
                    items: [
                        {
                            value: "2 weeks",
                            text: "Next 2 weeks"
                        },
                        {
                            value: "2-4 weeks",
                            text: "2-4 weeks"
                        },
                        {
                            value: "1-3 months",
                            text: "1-3 months"
                        },
                        {
                            value: "3 months",
                            text: "3+ months"
                        },
                        {
                            value: "None planned",
                            text: "None planned"
                        }
                    ]
                }) }}

                {{ govukCheckboxes({
                    idPrefix: "stakeholder-send-email",
                    name: "stakeholder-send-email",
                    value: data['stakeholder-send-email'],
                    items: [
                        {
                            value: "send-email",
                            text: "Send me an email receipt of responses"
                        }
                    ]
                }) }}

            {% endcall %}

            {{ govukButton({
                text: "Save and continue",
                classes: "govuk-button"
            }) }}
            </form>
        </div>

        <div class="govuk-grid-column-one-third">
           <aside class="app-related-items" role="complementary">
                <dl class="mhclg-summary-list">
                    <dt>Stakeholder name</dt>
                    <dd>{{ data['stakeholder-full-name'] }}</dd>
                    <dt>Anonymous</dt>
                    <dd>{{ data['stakeholder-anonymous'] }}</dd>
                    <dt>Last edited by</dt>
                    <dd><a href="#">Sarah Walton</a> on 6 August 2018 at 13:06 GMT</dd>
                </dl>
            </aside>
        </div>
    </div>

{% endblock %}
